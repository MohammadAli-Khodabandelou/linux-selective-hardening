#!/bin/bash

# set -e


FEATURE=$1

if [ -z "$FEATURE" ]; then
    echo "usage: benchmark [ full | none | selective ]"
    exit 1
fi

sed -i '/name: ubuntu/,/command/{s|command.*|command: ["/bin/sh", "-c", "/root/benchmark-with-kcbench"]|}' linuxkit.yml

mkdir -p results
cd results
logfile=`date +%s`-$FEATURE
nc -nlvp 8888 > $logfile &
cd ..

./boot $1
